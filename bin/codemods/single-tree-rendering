#!/usr/bin/env node

/*
	Instead of rendering two distinct React element trees to the `#primary` and `#secondary` <div>s,
	use a single `Layout` component tree that includes both, and render it to `#layout`.

	How to use:
	./bin/codemods/single-tree-rendering path-to-transform/
*/

/**
 * Internal dependencies
 */
const { runCodemod } = require( './src/helpers' );

runCodemod( ( config, args ) => [
	// jscodeshift options
	'--transform=bin/codemods/src/single-tree-rendering.js',
	...config.jscodeshiftArgs,

	// Transform target
	...args,
] );
